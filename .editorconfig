root = true

[*]
charset = utf-8

[*.{fs,fsi,fsx}]
indent_style = space
indent_size = 4

[*.{cs,cpp,h}]
indent_style = space
indent_size = 4

[*.{csproj,fsproj,vcxproj,props,targets,sln,slnf}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml,xml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[CMakeLists.txt]
indent_style = space
indent_size = 4

[Makefile*]
indent_style = tab
