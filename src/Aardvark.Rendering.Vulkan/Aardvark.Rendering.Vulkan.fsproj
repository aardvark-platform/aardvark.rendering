    <Compile Include="Core\ShaderInterface.fs" />
    <Compile Include="Resources\Buffer.fs" />
    <Compile Include="Resources\Image.fs" />
    <Compile Include="Resources\ImageView.fs" />
    <Compile Include="Resources\Sampler.fs" />
